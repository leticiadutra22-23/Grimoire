<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>MoonPhase</title>
    <link rel="stylesheet" href="/stylesheets/moon.css">
  </head>
  <body>
  <div class="shape-container">
  <img class="shape-image" src="/images/moon/MoonInfos.png" alt="Forma">
    <div class="text-container">
    <h1 class="text-overlay"><%= phaseData.title %></h1>
    <p><%= phaseData.description %></p>
    </div>
  <img class="small-image" src="<%= phaseData.image %>" alt="<%= phaseData.title %>">
  </div>
  <div class="corner-image">
  <img src="/images/moon/MoonTips.png" alt="Dicas">
     <div class="text-container">
    <h1>DICAS</h1>
    <p class="text-overlay"><%= phaseData.tips %></p>
    </div>
  </div>
  <div class="corner-image-right">
  <img src="/images/moon/moontodo.png" alt="Todo">
    <div class="text-container">
    <h1>TO DO</h1>
      <ul class="text-overlay">
      <% phaseData.todo.forEach(function(item) { %>
        <li><%= item %></li>
      <% }); %>
    </ul>
    </div>
  </div>
  </body>
</html>